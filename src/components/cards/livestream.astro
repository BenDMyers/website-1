---
import Card from '/Users/jenn.junod/Desktop/Code/website/src/components/generic/Card.astro';
import { Image } from '@astrojs/image/components';
import Livestream from '/public/teachJennTech.png'
import Button from '../generic/Button.astro';

const src = Livestream

---
<Card color='rose' extraClasses='col-span-4'>
    <div
class='card bg-white border-3 border-black rounded-lg p-4 h-full flex flex-col justify-between'
>
<div class='rounded-lg border-3 border-black my-3 h-100'>
    <Image
    src={src}
    alt={'giant hippo'}
    width={600}
    height={600}
    class='rounded h-full w-full object-cover'
    />
</div>
    <h2 class='text-2xl md:text-xl lg:text-4xl mb-1 dm-serif'>
    Learning Live with Teach Jenn Tech
    </h2>
    <p class='poppins my-5'>
        Learning live to make breaking into tech more accessible. 
    </p>
    <div>
    <Button href='/events/'>See what I do &rarr;</Button> </div>
    </div>
</Card>



